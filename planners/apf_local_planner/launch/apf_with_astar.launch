<launch>
  <!-- size of map, change the size inflate x, y, z according to your application -->
  <arg name="map_size_x" value="40.0"/>
  <arg name="map_size_y" value="40.0"/>
  <arg name="map_size_z" value=" 3.0"/>

  <!-- topic of your odometry such as VIO or LIO -->
  <arg name="odom_topic" value="/visual_slam/odom" />
  <node pkg="grid_path_searcher" type="demo_node" name="demo_node" output="screen" required="true">
    <remap from="~waypoints" to="/waypoint_generator_global/waypoints" />
    <remap from="~map" to="/map_generator/global_cloud" />
    <remap from="~odom" to="$(arg odom_topic)"/>
    <param name="map/margin" value="0.0" />
    <param name="map/resolution" value="0.2" />
    <param name="map/x_size" value="$(arg map_size_x)" />
    <param name="map/y_size" value="$(arg map_size_y)" />
    <param name="map/z_size" value="$(arg map_size_z)" />
  </node>
  <node pkg="waypoint_generator" name="waypoint_generator_global" type="waypoint_generator" output="screen">
    <remap from="~goal" to="/goal" />
    <param name="waypoint_type" value="manual-lonely-waypoint" />
  </node>
<node pkg="apf_local_planner" name="local_planner_main" type="local_planner_main" output="screen"  launch-prefix="gnome-terminal --">	
	<remap from="/prometheus/planning/local_pcl" to="/local_cloud" />
	<remap from="/prometheus/planning/goal" to="/demo_node/current_goal"/>
    <remap from="/odom" to="$(arg odom_topic)"/>
	<!-- 参数 -->
	<!-- 选择算法 0代表APF,1代表VFH -->
	<param name="local_planner/algorithm_mode" value="0" type="int"/>
	<!-- 激光雷达模型,0代表3d雷达,1代表2d雷达 -->
	<param name="local_planner/lidar_model" value="0" type="int"/>
	<!-- 飞行高度 -->
	<param name="local_planner/fly_height_2D" value="1.0" type="double"/>
	<param name="local_planner/sim_mode" value="true" type="bool"/>
	<!-- 最大速度，设的越小越安全 -->
	<param name="local_planner/max_planning_vel" value="1.0" type="double"/>
	<!-- 膨胀参数，一般设置为无人机的半径或更大 -->
	<param name="apf/inflate_distance" value="0.4" type="double"/>
	<!-- 感知距离，只考虑感知距离内的障碍物 -->
	<param name="apf/obs_distance" value="10.0" type="double"/>  
	<!-- 增益 -->
	<param name="apf/k_push" value="2.2" type="double"/>
	<param name="apf/k_att" value="1.0" type="double"/>
	<!-- 安全距离，距离障碍物在安全距离内，k_push自动增大 -->
	<param name="apf/min_dist" value="0.4" type="double"/>
	<!-- 最大吸引距离 -->
	<param name="apf/max_att_dist" value="4" type="double"/>
	<!-- 地面高度，不考虑低于地面高度的障碍物 -->
	<param name="apf/ground_height" value="0.3" type="double"/>
	<!-- 地面安全高度，小于该高度，会产生向上推力 -->
	<param name="apf/ground_safe_height" value="0.3" type="double"/>
	<!-- 停止距离，小于该距离，停止自动飞行 -->
	<param name="apf/safe_distance" value="0.01" type="double"/>
	<!-- 膨胀参数，一般设置为无人机的半径或更大 -->
	<param name="vfh/inflate_distance" value="0.5" type="double"/>
	<!-- 感知距离，只考虑感知距离内的障碍物 -->
	<param name="vfh/sensor_max_range" value="10.0" type="double"/>  
	<!-- weight -->
	<param name="vfh/obstacle_weight" value="5.0" type="double"/>
	<param name="vfh/goalWeight" value="1.0" type="double"/>
	<param name="vfh/safe_distance" value="0.1" type="double"/>
	<!-- 直方图个数 -->
	<param name="vfh/h_res" value="360" type="int"/>
</node>	

<node pkg="local_sensing_node" type="cloud_tf" name="cloud_tf">
	<remap from="/pcl_render_node/cloud" to="/pcl_render_node/cloud"/>	
</node>
  <!-- use simulator -->
  <include file="$(find ego_planner)/launch/simulator.xml">
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <arg name="c_num" value="200"/>
    <arg name="p_num" value="200"/>
    <arg name="min_dist" value="1.2"/>
    <arg name="init_x" value = "-10.0"/>
    <arg name="init_y" value = "-10.0"/>
    <arg name="init_z" value = "0.0"/>

    <arg name="odometry_topic" value="$(arg odom_topic)" />
  </include>

<node name="rviz" pkg="rviz" type="rviz" args="-d $(find apf_local_planner)/launch/default.rviz" required="true" />

</launch>
